                    <div class="container">
                        <div class="well" data-bind="fileDrag: PlaneSpotterVM.SpottedImageFile">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <img style="height: 125px;" class="img-rounded  thumb" data-bind="attr: { src:  PlaneSpotterVM.SpottedImageFile().dataURL }, visible:  PlaneSpotterVM.SpottedImageFile().dataURL">
                                    <div data-bind="ifnot:  PlaneSpotterVM.SpottedImageFile().dataURL">
                                        <label class="drag-label">Drag file here</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <input type="file" data-bind="fileInput:  PlaneSpotterVM.SpottedImageFile, customFileInput: {buttonClass: 'btn btn-success', fileNameClass: 'disabled form-control', onClear: onClear,}" accept="image/*" >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>*@

        </div>
        <div class="row">
            <div class="col-md-6">
                <form>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Email address</label>
                        <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Example select</label>
                        <select class="form-control" id="exampleFormControlSelect1">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect2">Example multiple select</label>
                        <select multiple class="form-control" id="exampleFormControlSelect2">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Example textarea</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                </form>
            </div>
        </div>
        <div class="cocontainer">
            <div class="col-lg-4">
                <button type="button" class="btn btn-dark" data-bind="event:{click: PlaneSpotterVM.IsPageSummeryVisible(true)}">Summery</button>
                <button type="button" class="btn btn-dark" data-bind="event:{click: PlaneSpotterVM.ResetForm}">Reset</button>
                <button type="button" class="btn btn-dark" data-bind="event:{click: PlaneSpotterVM.SaveSpottingInfo}">Save</button>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="~/Scripts/app/PlaneSpotter/PlaneSpotter.js"></script>
