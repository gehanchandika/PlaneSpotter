
<div id="PlaneSpotterMain">
    <div id="divSummery" class="container-fluid" data-bind="visible: PlaneSpotterVM.IsPageSummeryVisible()">
        <div><h4>Spotted Aircraft Summery</h4></div>
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Registration</th>
                    <th scope="col">Make</th>
                    <th scope="col">Model</th>
                    <th scope="col">Location</th>
                    <th scope="col">Date</th>
                    <th scope="col" />
                    <th scope="col" />
                </tr>
                <tr>
                    <th>
                        <input id="RegSearchKey" type="text" maxlength="8" data-bind="value: PlaneSpotterVM.AircraftRegFilter(),
                               valueUpdate: 'afterkeydown', event:{ keyup: PlaneSpotterVM.FilterAircraftList} ">
                    </th>
                    <th>
                        <input id="MakeSearchKey" type="text" maxlength="128" data-bind="value: PlaneSpotterVM.AircraftMakeFilter(),
                               valueUpdate: 'afterkeydown', event:{ keyup: PlaneSpotterVM.FilterAircraftList} ">
                    </th>
                    <th>
                        <input id="ModelSearchKey" type="text" maxlength="128" data-bind="value: PlaneSpotterVM.AircraftModelFilter(),
                               valueUpdate: 'afterkeydown', event:{ keyup: PlaneSpotterVM.FilterAircraftList} ">
                    </th>
                    <th></th>
                    <th></th>
                    <th />
                    <th />
                </tr>
            </thead>
            <tbody data-bind="foreach: PlaneSpotterVM.FilteredSpottedPlanes">
                <tr>
                    <td data-bind="text:AircraftRegistration"></td>
                    <td data-bind="text:AircraftMake"></td>
                    <td data-bind="text:AircraftModel"></td>
                    <td data-bind="text:Location"></td>
                    <td data-bind="text: moment(SpottedDateTime).format('YYYY-MM-DD HH:mm')"></td>
                    <td><a href='#' data-bind="event:{click:PlaneSpotterVM.EditSpottingInfo}">Edit</a></td>
                    <td><a href='#' data-bind="event:{click:PlaneSpotterVM.DeleteSpottedAircraftDetails}">Delete</a></td>

                </tr>
            </tbody>
        </table>

        <button type="button" class="btn btn-dark" data-bind="event:{click: PlaneSpotterVM.AddNewSpottingInfo()}">Add Info</button>
    </div>

    <div id="divDetails" class="container-fluid" data-bind="visible: !PlaneSpotterVM.IsPageSummeryVisible()">
        <div>
            <h4>Spotted Aircraft Informtion</h4>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <span>Aircraft Make</span>
                </div>
                <div class="col-lg-9">
                    <input id="tMake" type="text" maxlength="128" data-bind="textInput:PlaneSpotterVM.AircraftMake" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <span>Aircraft Model</span>
                </div>
                <div class="col-lg-9">
                    <input id="tModel" type="text" maxlength="128" data-bind="textInput:PlaneSpotterVM.AircraftModel" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <span>Aircraft Registration Number</span>
                </div>
                <div class="col-lg-9">
                    <input id="tReg" type="text" maxlength="8" data-bind="textInput:PlaneSpotterVM.AircraftRegistration" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <span>Location</span>
                </div>
                <div class="col-lg-9">
                    <input id="tLocation" type="text" maxlength="255" data-bind="textInput:PlaneSpotterVM.Location" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <span>Date and Time</span>
                </div>
                <div class="col-lg-9">
                    @*<input id="txtOutDate" type='text' data-bind=" value: PlaneSpotterVM.SpottedDateTime()" />*@
                    <input id="tTime" type="datetime-local" data-bind="value:PlaneSpotterVM.SpottedDateTime()" />
                        @*<span data-bind="text : PlaneSpotterVM.SpottedDateTime()"></span>*@
                         @*<input data-bind="datePicker : PlaneSpotterVM.SpottedDateTime()" type="date">*@
                </div>
            </div>
