<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plane Spotter</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-image">
    <div id="DivLayoutMain" >

        <nav class="navbar navbar-dark bg-theme">
            <a class="navbar-brand" href=".">
                <img src="~/Images/plane_potter.png" width="30" height="30" class="d-inline-block align-top rounded" alt="">
                Plane Spotter
            </a>
        </nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/knockoutjs")
        @Scripts.Render("~/bundles/momentjs")
        @Scripts.Render("~/bundles/customscripts")


        @RenderSection("scripts", required: false)

    </div>
</body>
</html>